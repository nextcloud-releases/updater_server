{
  "config": {
    "vendor-dir": "./vendor/",
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "platform": {
      "php": "8.1"
    }
  },
  "autoload": {
    "psr-4": {
      "UpdateServer\\": "src/",
      "Tests\\": "tests/unit"
    }
  },
  "require": {
    "ext-json": "*"
  },
  "require-dev": {
    "behat/behat": "^3.18"
  },
  "scripts": {
    "lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l"
  }
}
